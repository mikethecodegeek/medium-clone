extends layout
block content
    div(class="new-articles-container")
        form(method='post' action=`/articles/${article.id}/edit`)
            input(type='hidden' name='_csrf' value=token)
            input(type='hidden' name='userId' value=session.auth.userId)
            input(name='title' type='text' class="edit-article-title" value= article.title)
            div
            textarea(name='body' class="edit-article-body") #{article.body}
            div
                button(type='submit' class="black-outline" value='submit') Submit
